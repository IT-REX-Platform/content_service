interface Content {
    """
    ID of the content
    """
    id: UUID!
    """
    Name of the content
    """
    name: String!
    """
    Number of reward points a student receives for completing this content
    """
    rewardPoints: Int!
    """
    ID of the chapter this content is associated with
    """
    chapterId: UUID!
    """
    TagNames this content is tagged with
    """
    tagNames: [String!]!
}

